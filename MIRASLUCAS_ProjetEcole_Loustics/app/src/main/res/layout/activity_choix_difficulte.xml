<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.ChoixDifficulteActivity"
    android:background="@drawable/classroom">


<TextView
    android:id="@+id/textView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:text="Choix Difficulte"
    android:textAllCaps="true"
    android:textColor="@android:color/holo_orange_dark"
    android:textSize="40dp"
    android:background="#80000000"
    android:layout_marginTop="10dp"/>
    <TextView
        android:layout_marginLeft="20dp"
        android:id="@+id/Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score : "
        android:background="#80000000"
        android:textColor="@android:color/holo_orange_dark"></TextView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="60dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <Button
            android:id="@+id/facile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="choixDifficulteFacile"
            android:layout_marginBottom="20dp"
            android:background="@drawable/background_button"
            android:text="Facile"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="15dp" />

        <Button
            android:id="@+id/normal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="choixDifficulteNormal"
            android:background="@drawable/background_button"
            android:text="normal"
            android:layout_marginBottom="20dp"
            android:textSize="15dp"
            android:textColor="@android:color/holo_orange_dark"/>

        <Button
            android:id="@+id/difficile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="choixDifficulteDifficile"
            android:background="@drawable/background_button"
            android:text="Difficile"
            android:textSize="15dp"
            android:textColor="@android:color/holo_orange_dark"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

    </LinearLayout>
</LinearLayout>
</LinearLayout>