<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".controller.ChoixExoActivity"
    android:background="@drawable/classroom_vide">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Choix Du type d'exercice"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="40dp"
        android:background="#80000000"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/background_button"
                android:onClick="choixExoAddition"
                android:text="Addition"
                android:layout_marginBottom="20dp"
                android:textSize="15dp"
                android:textColor="@android:color/holo_orange_dark"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="choixExoMultiplication"
                android:background="@drawable/background_button"
                android:text="Multiplication"
                android:layout_marginBottom="20dp"
                android:textSize="15dp"
                android:textColor="@android:color/holo_orange_dark"/>

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/background_button"
                android:onClick="choixExoCultG"
                android:text="GÃ©ographie"
                android:textSize="15dp"
                android:textColor="@android:color/holo_orange_dark"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

        </LinearLayout>
    </LinearLayout>
</LinearLayout>